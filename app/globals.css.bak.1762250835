@import "tailwindcss";

:root {
  color-scheme: light;
  --brand-gold: #A78B5A;
  --text-dark: #1F2937;
  --off-white: #FAFAF8;
  --border-subtle: #E5E7EB;
  --font-inter: "Inter", ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji", sans-serif;
  --font-cormorant: "Cormorant Garamond", ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
}

@theme inline {
  --color-brandGold: var(--brand-gold);
  --color-textDark: var(--text-dark);
  --color-offWhite: var(--off-white);
  --color-borderSubtle: var(--border-subtle);
  --font-sans: var(--font-inter);
  --font-serif: var(--font-cormorant);
}

html {
  scroll-behavior: smooth;
}

body {
  min-height: 100%;
  background-color: var(--off-white);
  color: var(--text-dark);
  font-family: var(--font-inter);
  text-rendering: optimizeLegibility;
}

a {
  color: inherit;
  text-decoration: none;
}

h1,
h2,
h3,
h4,
.font-serif {
  font-family: var(--font-cormorant);
}

.btn {
  @apply inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 text-sm font-semibold uppercase tracking-wide transition duration-200 ease-out;
  border: 1px solid transparent;
}

.btn-primary {
  background-color: var(--brand-gold);
  border-color: var(--brand-gold);
  color: #ffffff;
}

.btn-primary:hover,
.btn-primary:focus-visible {
  filter: brightness(0.92);
}

.btn-ghost {
  background-color: transparent;
  border-color: var(--brand-gold);
  color: var(--brand-gold);
}

.btn-ghost:hover,
.btn-ghost:focus-visible {
  background-color: color-mix(in srgb, var(--brand-gold) 12%, transparent);
}

.container-xl {
  @apply mx-auto max-w-7xl px-4 sm:px-6 lg:px-8;
}

.video-hero .hero-fallback {
  display: none;
}

@media (prefers-reduced-motion: reduce) {
  .video-hero video {
    display: none;
  }

  .video-hero .hero-fallback {
    display: block;
  }
}

/* === Footer (light theme) === */
.footer {
  @apply bg-white text-[color:var(--text-dark)];
}

.footer-heading {
  /* matches the gold headings in reference */
  color: var(--brand-gold);
  @apply font-serif text-xl mb-4;
}

.footer-link {
  @apply text-[color:var(--text-dark)] leading-7 transition;
  text-underline-offset: 4px;
}
.footer-link:hover {
  color: var(--brand-gold);
  text-decoration: underline;
}

/* spacing for each column group */
.footer-group { @apply space-y-3; }

/* top container padding */
.footer-wrap { @apply container-xl py-12; }

/* thin divider (very subtle) */
.footer-divider { @apply border-t border-[color:var(--border-subtle)]; }

/* bottom strip (khaki bar) */
.footer-bottom {
  background-color: #9A8657; /* khaki close to the ref */
  @apply text-white;
}
.footer-bottom a {
  @apply text-white/90 transition;
  text-underline-offset: 3px;
}
.footer-bottom a:hover {
  @apply text-white;
  text-decoration: underline;
}
.footer-bottom-inner {
  @apply container-xl flex flex-wrap items-center gap-4 py-3 text-xs;
}


/* === CLINIC FEATURE SECTION STYLES (exact to reference) === */
.hex-bg {
  background-image: url("data:image/svg+xml,%3Csvg width='160' height='140' viewBox='0 0 160 140' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' stroke='%23e5e7eb' stroke-opacity='0.45'%3E%3Cpath d='M40 10 L80 10 L100 40 L80 70 L40 70 L20 40 Z'/%3E%3C/g%3E%3C/svg%3E");
  background-size: 160px 140px;
  background-repeat: repeat;
}

.card {
  @apply bg-white rounded-none shadow-sm;
  border: 1px solid var(--brand-gold);
  box-shadow: 0 10px 25px rgba(0,0,0,.06);
}

.card-body {
  @apply px-12 py-14 text-center;
}

.card h3 {
  @apply font-serif text-[28px] leading-snug font-semibold text-[color:var(--text-dark)];
}

.card p {
  @apply mt-5 text-[15px] leading-7 text-[color:var(--text-dark)];
}

.btn-outline-gold {
  @apply inline-flex items-center justify-center text-[13px] font-semibold px-5 py-2;
  border: 1px solid var(--brand-gold);
  color: var(--text-dark);
  background: transparent;
  transition: filter .15s ease, background .15s ease;
}
.btn-outline-gold:hover { background: rgba(167,139,90,.08); }

/* Welcome block */
.welcome-wrap {
  @apply text-center mx-auto;
  max-width: 68rem; /* ~1088px */
}
.welcome-title {
  @apply font-serif text-[40px] md:text-[44px] leading-tight font-semibold;
  color: var(--brand-gold);
}
.welcome-text {
  @apply mt-6 text-[15px] md:text-[16px] leading-7 text-[color:var(--text-dark)];
}
.btn-outline-light {
  border: 1px solid #ffffff;
  background: transparent;
  color: #ffffff;
}
.btn-outline-light:hover {
  filter: brightness(1.08);
  background: rgba(255, 255, 255, 0.06);
}

.btn-gold {
  border: 1px solid var(--brand-gold);
  background: var(--brand-gold);
  color: #ffffff;
}
.btn-gold:hover {
  filter: brightness(0.92);
}
